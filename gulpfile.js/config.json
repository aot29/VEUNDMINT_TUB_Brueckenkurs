{
  "root": {
    "src": "./tu9onlinekurstest",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },
    "css": {
      "src": [
        "./bower_components/qtip2/jquery.qtip.css",
        "./tu9onlinekurstest/css/**/*.css"
      ],
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "extensions": ["sass", "scss", "css"]
    },
    "scripts": {
      "src": [
        "./node_modules/jquery/dist/jquery.js",
        "./bower_components/qtip2/jquery.qtip.js",
        "./bower_components/jquery-i18n/jquery.i18n.js",
        "./tu9onlinekurstest/js/**/*.js"
      ],
      "dest": "js"
    },
    "html": {
      "src": "./",
      "dest": "./",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },
    "fonts": {
      "src": [
        "./node_modules/font-awesome/fonts/*.*",
        "./node_modules/open-sans-fontface/fonts/Regular/*.*",
        "./node_modules/npm-font-open-sans-condensed/fonts/*.*",
        "./tu9onlinekurstest/fonts/**/*"
      ],
      "dest": "fonts"
    },
    "images": {
      "src": [
        "./tu9onlinekurstest/images/**/*"
      ],
      "dest": "images"
    },
    "production" : {
      "rev": true
    }
  }
}
