\def\iint{\int\int}% Not very satisfactory. Too spread out..
\def\iiint{\int\int\int}
\def\iiiint{\int\int\int\int}
\def\overset#1#2{\mathop{#2}^{#1}}
\def\underset#1#2{\mathop{#2}_{#1}}
\def\intertext#1{\noalign{#1}}
\def\lvert{\vert}
\def\rvert{\vert}
\def\lVert{\Vert}
\def\rVert{\Vert}
\newcommand{\hdotsfor}[2][]{\multicolumn{#2}{}{\dots}}


