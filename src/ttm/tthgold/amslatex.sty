\def\numberwithin#1#2{\@addtoreset{#1}{#2}}

\def\text#1{\mbox{#1}}
\def\dfrac#1#2{{#1\over #2}}% Ignore the size control.
\def\tfrac#1#2{{#1\over #2}}
\def\cfrac#1#2{{#1\over #2}}
