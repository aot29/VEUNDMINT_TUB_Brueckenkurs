\foreach \x in {0,1,2.25, 4, 9}
		\draw[shift={(\x,0)},color=black] 
		  (0pt,2pt) -- (0pt,-2pt) node[below] {\footnotesize $\x$};
% y- koordinate
\node (yMAX) at (0,1.8){};
\draw[->,color=black] (0,0) -- (yMAX);
